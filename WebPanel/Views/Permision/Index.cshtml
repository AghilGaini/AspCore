@model WebPanel.ViewModels.Permision.RolePermisionViewModel
@{
    ViewBag.Title = "Permision Page";
}

<h1>Permisions for Role : @ViewBag.RoleName</h1>

<form method="post" asp-action="Index">
    <table class="table table-dark" style="margin-top:5%">
        <thead>
            <tr>
                <th>Title</th>
                <th>IsSelected</th>
            </tr>
        </thead>
        <div style="display:none">
            <input asp-for="RoleId" type="hidden" />
        </div>
        <tbody>
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.Claims[i].Title" type="hidden">
                        <input asp-for="@Model.Claims[i].Value" type="hidden">
                        <input asp-for="@Model.Claims[i].PermisionId" type="hidden">
                        @Model.Claims[i].Title
                    </td>
                    <td>
                        <input asp-for="@Model.Claims[i].IsSelected">
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" asp-controller="Role" class="btn btn-danger">
        Cancel
    </a>
</form>
