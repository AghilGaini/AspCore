@model RoleUserViewModel
@{
    ViewBag.Title = "Role User Page";
}

<h3>Manage Users for @ViewBag.RoleTitle</h3>

<form method="post" asp-action="CreateRoleUser">
    <input asp-for="RoleId" type="hidden" />
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Title</th>
                <th>IsSelected</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.UserInfo.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.UserInfo[i].UserName" type="hidden">
                        <input asp-for="@Model.UserInfo[i].UserId" type="hidden">
                        @Model.UserInfo[i].UserName
                    </td>
                    <td>
                        <input asp-for="@Model.UserInfo[i].IsSelected">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" asp-controller="Role" class="btn btn-danger">
        Cancel
    </a>
</form>

