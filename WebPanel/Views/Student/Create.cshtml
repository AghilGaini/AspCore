@model StudentDomain
@{
    ViewBag.Title = "Create Student";
}

<form method="post" asp-action="Create" asp-controller="Student">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <label asp-for="Name" class="col-6"></label>
        <input asp-for="Name" class="col-6" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="NationalCode" class="col-6"></label>
        <input asp-for="NationalCode" class="col-6"/>
        <span asp-validation-for="NationalCode" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Age" class="col-6"></label>
        <input asp-for="Age" class="col-6"/>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

</form>


