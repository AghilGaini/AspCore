@model WebPanel.ViewModels.Student.StudentViewModel
@{
    ViewBag.Title = "Students Page";
}

<form asp-action="Index" method="get" class="form-inline">
    <div class="form-group">
        <label for="txtStudentName">StudentName:</label>
        <input type="text" class="form-control" id="txtStudentName" placeholder="Student Name" name="txtStudentName" />
    </div>
    <div class="form-group">
        <label for="txtNationalCode">NationalCode:</label>
        <input type="text" class="form-control" id="txtNationalCode" placeholder="NationalCode" name="txtNationalCode" />
    </div>
    <div class="form-group">
        <label for="nuAge">Age:</label>
        <input type="number" class="form-control" id="nuAge" placeholder="Age" name="nuAge" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-dark" style="margin-top:5%">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParam">Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NationalCodeSortParam">NationalCode</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.AgeSortParam">Age</a>
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.NationalCode</td>
                <td>@item.Age</td>
                <td>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Actions
                    </button>
                    <div class="dropdown-menu shadow animated--grow-in">
                        @foreach (var link in Model.Actions)
                        {
                            <a style='margin-right:16px' class="dropdown-item"
                       asp-controller="@link.Controller" asp-action="@link.Action" asp-route-studentId="@item.Id">
                                <i class="fas fa-wrench"></i> @link.Title
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" asp-controller="Student" class="btn btn-primary">
        Create New Student
    </a>
</div>




