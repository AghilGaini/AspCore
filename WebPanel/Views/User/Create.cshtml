@model CreateUserViewModel
@{
    ViewBag.Title = "Create User";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <label asp-for="UserName" class="col-6">Username : </label>
        <input asp-for="UserName" class="col-6" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Email" class="col-6">Email : </label>
        <input asp-for="Email" class="col-6" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="Password" class="col-6">Password : </label>
        <input asp-for="Password" class="col-6" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="ConfirmPassword" class="col-6">Confirm Password : </label>
        <input asp-for="ConfirmPassword" class="col-6" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" asp-controller="User" class="btn btn-danger">
        Cancel
    </a>
</form>