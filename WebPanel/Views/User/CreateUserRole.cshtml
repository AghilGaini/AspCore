@model UserRoleViewModel
@{
    ViewBag.Title = "User Role Page";
}

<h3>Manage roles for @ViewBag.UserName</h3>

<form method="post" asp-action="CreateUserRole">
    <input asp-for="userId" type="hidden" />
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Title</th>
                <th>IsSelected</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.rolesInfo.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.rolesInfo[i].RoleName" type="hidden">
                        <input asp-for="@Model.rolesInfo[i].RoleID" type="hidden">
                        @Model.rolesInfo[i].RoleName
                    </td>
                    <td>
                        <input asp-for="@Model.rolesInfo[i].IsSelected">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" asp-controller="User" class="btn btn-danger">
        Cancel
    </a>
</form>

