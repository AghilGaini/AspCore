@model UserViewModel
@{
    ViewBag.Title = "Users Page";
}

<table class="table table-dark" style="margin-top:5%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.UserName</td>
                <td>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Actions
                    </button>
                    <div class="dropdown-menu shadow animated--grow-in">
                        @foreach (var link in Model.Actions)
                        {
                            <a style='margin-right:16px' class="dropdown-item"
                       asp-controller="@link.Controller" asp-action="@link.Action" asp-route-userId="@item.Id">
                                <i class="fas fa-wrench"></i> @link.Title
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" asp-controller="User" class="btn btn-primary">
        Create New User
    </a>
</div>
